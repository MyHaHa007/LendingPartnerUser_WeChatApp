.container{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.bookdetail{
    width: 100%;
    height:400rpx;
    display: flex;
    flex-direction: row;
    margin: 20rpx 20rpx;
    border-bottom: 2rpx solid #eee;
}
.bookdetail_bookcover{
    width: 30%;
    display: flex;
    justify-content: center;

}
.bookcover{
    width: 200rpx;
    height: 270rpx;
    display: flex;
    align-items: center;
    margin: 10rpx 20rpx;
}
.bookdetail_summary{
    width: 70%;
    margin: 20rpx 20rpx;
}
.summary{
    width: 100%;
    line-height: 30rpx;
    margin: 20rpx 0;
}