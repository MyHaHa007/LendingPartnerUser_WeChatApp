.container{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.content{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 2rpx solid #eee;
}
.image{
    width: 80rpx;
    height: 80rpx;
}
.content .item{
    width: 50%;
    padding: 0 20rpx;
}
.content .text{
    width: 50%;
   padding: 0 20rpx;
    color: darkgrey;
   text-align: right;
}
.name{
    position:fixed;
    width:100%;
    height:100%;
    top:0px;
    background:rgba(0,0,0,0.4);
    overflow: hidden;
}
