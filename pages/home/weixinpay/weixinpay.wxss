page{
  background: #eee;
}
.container_header{
  width: 100%;
  height: 100rpx;
  display: flex;
  color: white;
  justify-content: center;
  background-image: linear-gradient(to bottom,darkgrey,black);
}
.text{
  padding-top: 10rpx;
   display: flex;
   flex-direction: column;
}
.text .confirm{
  font-weight: bold;
  font-size: 13pt;
}
.text .weixin{
    font-size: 9pt;
}
.container_body{
  width: 100%;
  height: 200rpx;
}
.jin_e{
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.jin_e_text{
  display: flex;
  justify-content: center;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.side{
  width: 100%;
  line-height: 110rpx;
  display: flex;
  flex-direction: row;
  background: white;
  border-bottom: 3rpx solid darkgray;
  border-top: 3rpx solid darkgray;
  padding: 0 30rpx;
  font-size: 10pt;
}
.side_left{
  color: darkgray;
}
.side_right{
  position: absolute;
  right: 30rpx;
}
button{
  margin: 50rpx 20rpx;
}