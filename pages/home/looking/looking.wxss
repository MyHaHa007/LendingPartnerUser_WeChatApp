.container{
  width: 100%;
  height:100%;
  margin-bottom: 100rpx;
}
.content{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 2rpx solid #eee;
}
.bookcover{
    width: 160rpx;
    height: 180rpx;
    display: flex;
    align-items: center;
    margin: 10rpx;
    z-index: 4;
}
.text{
    width: 60%;
    padding: 0 20rpx;
}
.book{
  margin: 10rpx 0;
  font-size: 11pt;
}
#bookname{
  font-size: 12pt;
  font-weight: bold;
  font-family: YouYuan;
}
.nocontainer{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  margin-top: 450rpx;
}
.Img{
  display: flex;
  justify-content: center;
    color: #707070;
  font-size: 11pt;
  margin-bottom: 20rpx;
}
.Img image{
  width: 100rpx;
  height: 100rpx;
}
.container_footer{
    position:fixed;
    bottom: 0rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 95%;
    height: 100rpx;
    background: white;
    border-top: 2rpx solid #eee;
}
.checkbox{
    width: 80%;
    padding: 0 20rpx;
}
.submitbuttum{
    width: 150rpx;
    background: #39904F;
    font-size: 11pt;
    line-height: 70rpx;
    margin:0 10rpx;
}
.icon{
    margin-left: 20rpx;
    border-radius: 100%;
}
.return_time{
  color: red;
}