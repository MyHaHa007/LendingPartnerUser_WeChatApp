.container{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.bookdetail{
    width: 100%;
    height:350rpx;
    display: flex;
    flex-direction: row;
    /*margin: 20rpx 20rpx;*/
    padding: 20rpx 20rpx;
    border-bottom: 2rpx solid #eee;
}
.bookdetail_bookcover{
    width: 30%;
    display: flex;
    justify-content: center;
}
.bookcover{
    width: 220rpx;
    height: 270rpx;
    display: flex;
    align-items: center;
    margin: 10rpx 20rpx;
}
.bookdetail_summary{
    width: 70%;
    margin: 15rpx 20rpx;
}
.summary{
    width: 100%;
    line-height: 30rpx;
    font-size: 9pt;
    margin-bottom: 20rpx;
}
.summary text{
   margin-right: 5rpx;
}
.text{
     font-size: 11pt;
     font-weight: bold;
}
#summary{
    display: flex;
    flex-direction: row;
}
.book{
    margin-bottom: 20rpx;
}
.bnt_book{
   width: 220rpx;
   margin: 10rpx 20rpx;
   font-size: 9pt;
   line-height: 60rpx;
   background: #eee;
}
.bookdetail_extend{
    width: 100%;
    line-height: 80rpx;
    border-bottom: 4rpx solid #eee;
    font-size: 11pt;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.active{
    color: red;
    border-bottom: 3rpx solid red;
}
.extend_summary_content{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.scroll_summary{
    width: 95%;
    font-size: 11pt;
    padding:30rpx;
    color: dimgray;
    text-indent: 2em;
    border-bottom: 2rpx solid #eee;
}
.extend_summary_like_text{
    padding : 20rpx 20rpx;
    font-weight: bold;
    font-size: 11pt;
}
.extend_summary_like_bookname{
    margin: 20rpx 50rpx;
}
.extend_Preview_content{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.extend_Preview_content_catalog{
    width: 90%;
    color: darkgrey;
    display: flex;
    flex-direction: column;
    line-height: 80rpx;
    font-size: 11pt;
    padding-left: 20rpx;
    border-bottom: 2rpx solid #eee;
}
.firstcatalog{
    width: 90%;
    color: black;
    line-height: 80rpx;
    font-size: 11pt;
    padding-left: 20rpx;
    border-bottom: 2rpx solid #eee;
}
.extend_assess_content{
   margin-bottom: 110rpx;
}
.extend_assess_content_footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 11pt;
  background: white;
}
.extend_assess_content_footer_input{
  width: 72%;
   padding:5rpx;
    line-height: 60rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
}
.discuss_submit{
  width: 120rpx;
  padding: 5rpx 0;
  line-height: 60rpx;
  margin-left: 20rpx;
  font-size: 11pt;
}
.discuss{
  width: 100%;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  font-size: 9pt;
  color: #707070;
  border-bottom: 2rpx solid #eee;
}
.user_discuss{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
  margin-right: 30rpx
}
.user_discuss .user_name{
  display: flex;
  justify-content: center;
  margin-left: 20rpx;
  color: #707070;
}
.discuss image{  
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
