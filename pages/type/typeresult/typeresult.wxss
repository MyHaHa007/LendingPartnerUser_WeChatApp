.container{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.container_body{
    width: 100%;
    height: 100%;
}
.content{
    width: 100%;
    height: 300rpx;
    display: flex;
    font-size: 11pt;
    flex-direction: row;
    align-items: center;
    background: #eee;
    margin-bottom: 5rpx;
    border-bottom: 2rpx solid #eee;
}
.image{
    width: 30%;
}
.bookcover{
    width: 200rpx;
    height: 270rpx;
    display: flex;
    align-items: center;
    margin: 10rpx 20rpx;
}
.text{
    width: 64%;
    padding: 0 20rpx;   
}
text{  
    font-size: 9pt;
    display: -webkit-box;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.booktext{
    margin: 10rpx 0;
    color: dimgrey;
}
#bookname{
    color: black;
    font-size: 11pt;
    font-weight: bold;
}
.gotoTop{
     position: absolute;
     bottom: 70rpx; 
     right: 30rpx;
     width: 100rpx;
     height: 100rpx; 
     border-radius: 100%;
     background: rgba(0, 0, 0, 0.2)
}
.gotoTop image{
    width: 100rpx;
    height: 100rpx; 
    border-radius: 100%;
}