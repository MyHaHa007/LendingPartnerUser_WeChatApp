.container{
    width: 100%;
    display: flex;
    flex-direction: column;
}
.container_header{
    width: 100%;
    height: 100rpx;
    display: flex;
    font-size: 11pt;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-bottom: 2rpx solid #eee;
    position: fixed;
    z-index: 1;
    background: white;
}
.find{
    width: 75%;
    height: 70rpx;
    display: flex;
    flex-direction: row;
    background: white;
    border-radius: 20rpx;
    border: 2rpx solid #eee;
}
.find_icon{
    margin-top: 15rpx;
    margin-left: 20rpx;
}
.find_input{
    width: 100%;
    margin-top: 9rpx;
    margin-left: 10rpx;
}
.find_button{
    width: 150rpx;
    background: #39904F;
    font-size: 11pt;
    line-height: 70rpx;
    margin-left: 20rpx;
}
.text{
    padding: 20rpx 0;
    font-size: 11pt;
    color: darkgray;
    display: flex;
    justify-content: space-around;
    border-bottom: 2rpx solid #eee;
}
.item{
    margin: 20rpx;
    display: flex;
    flex-flow: row wrap;
}
.content_text{
  width: 100%;
  height: 120rpx;
  display: flex;
  margin-top: 300rpx;
  flex-direction:row;
  justify-content: center;
  color: #707070;
  font-size: 11pt;
}
.image{
   display: flex;
   flex-direction: row;
   justify-content: center;
}
.image image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.find_content{
  margin-top: 120rpx;
}
.content{
    width: 100%;
    height: 300rpx;
    display: flex;
    font-size: 11pt;
    flex-direction: row;
    align-items: center;
    margin-bottom: 5rpx;
    border-bottom: 2rpx solid #eee;
}
.bookcover_image{
    width: 30%;
}
.bookcover{
    width: 200rpx;
    height: 270rpx;
    display: flex;
    align-items: center;
    margin: 10rpx 20rpx;
}
.sumary_text{
    width: 70%;
    padding: 0 20rpx;   
}
.sumary_text text{  
    font-size: 9pt;
    display: -webkit-box;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.booktext{
    margin: 10rpx 0;
    color: dimgrey;
}
#bookname{
    color: black;
    font-size: 11pt;
    font-weight: bold;
}
.gotoTop{
     position: absolute;
     bottom: 70rpx; 
     right: 30rpx;
     width: 100rpx;
     height: 100rpx; 
     border-radius: 100%;
     background: rgba(0, 0, 0, 0.2)
}
.gotoTop image{
    width: 100rpx;
    height: 100rpx; 
    border-radius: 100%;
}